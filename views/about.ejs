    <div class="about-hero-image">
      <% 
        // Get hero image for about page
        const aboutHeroImage = imagesBySection && imagesBySection['about-hero'] && imagesBySection['about-hero'][0];
      %>
      <% if (aboutHeroImage) { %>
        <img src="/uploads/<%= aboutHeroImage.filename %>" alt="<%= aboutHeroImage.caption || 'JediCare Care Medical centre' %>" style="width: 100%; height: 300px; object-fit: cover; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
