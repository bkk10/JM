        <!-- Fallback to placeholder -->
        <img src="https://via.placeholder.com/600x300/23b371/ffffff?text=JediCare +Medical+Centre" alt="JediCare Care Medical centre" style="width: 100%; height: 300px; object-fit: cover; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
      <% } %>
    </div>
  </div>
  
