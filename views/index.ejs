  <% } %>
  
  <div class="testimonials-container" style="max-width: 800px; margin: 0 auto; position: relative; overflow: hidden;">
    <div class="testimonials-slider" style="display: flex; transition: transform 0.5s ease;">
      <% 
        // Create an array of testimonials from content
        const testimonials = [];
        
        // Check each testimonial slot
        for (let i = 1; i <= 3; i++) {
          const quote = content && content[`testimonial_quote${i}`];
          const badge = content && content[`testimonial_badge${i}`];
          
          if (quote && quote.trim()) {
            testimonials.push({ quote, badge });
          }
        }
        
        // If no testimonials in content, use default
        if (testimonials.length === 0) {
          testimonials.push({
            quote: "The team at Jedi Medical listened carefully, explained everything clearly, and helped me feel at ease throughout my visit. Professional and compassionate care.",
            badge: "— Mary K., Kapsoya"
          });
          testimonials.push({
            quote: "Clean facility, modern equipment, and doctors who take time to understand. The optician helped me find perfect glasses. Highly recommended!",
            badge: "— Daniel A., Ainabkoi"
          });
          testimonials.push({
            quote: "Fast diagnostics and practical advice. I appreciate how they follow up to ensure recovery is on track. A reliable clinic in our community.",
            badge: "— Ruth N., Uasin Gishu"
          });
        }
      %>
      
      <% testimonials.forEach((testimonial, index) => { %>
        <div class="testimonial-slide" 
             style="min-width: 100%; padding: 30px; background: #f9f9f9; border-radius: 12px; box-sizing: border-box;">
          <div style="font-size: 24px; color: #23b371; margin-bottom: 16px; text-align: center;">"</div>
          <p style="font-size: 18px; font-style: italic; color: #426b54; text-align: center;">
            <%= testimonial.quote %>
          </p>
          <div style="text-align: center; margin-top: 20px;">
            <div class="badge"><%= testimonial.badge %></div>
          </div>
        </div>
      <% }) %>
    </div>
    
    <% if (testimonials.length > 1) { %>
      <!-- Navigation dots -->
      <div style="text-align: center; margin-top: 20px;">
        <% for (let i = 0; i < testimonials.length; i++) { %>
          <button class="testimonial-dot" 
                  data-index="<%= i %>" 
                  style="width: 10px; height: 10px; border-radius: 50%; border: none; background: <%= i === 0 ? '#23b371' : '#ccc' %>; margin: 0 5px; cursor: pointer;"></button>
        <% } %>
      </div>
    <% } %>
  </div>
</section>

<style>
  .testimonial-slide {
    transition: opacity 0.5s ease;
  }
</style>

<script>
  // Auto-scrolling testimonials
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.querySelector('.testimonials-slider');
    const dots = document.querySelectorAll('.testimonial-dot');
    const slides = document.querySelectorAll('.testimonial-slide');
    
    if (slides.length > 1) {
      let currentIndex = 0;
      const totalSlides = slides.length;
      
      // Function to move to a specific slide
      function goToSlide(index) {
        currentIndex = index;
        slider.style.transform = `translateX(-${currentIndex * 100}%)`;
        
        // Update active dot
        dots.forEach((dot, i) => {
          dot.style.background = i === currentIndex ? '#23b371' : '#ccc';
        });
      }
      
      // Auto-scroll every 5 seconds
      setInterval(() => {
        currentIndex = (currentIndex + 1) % totalSlides;
        goToSlide(currentIndex);
      }, 5000);
      
      // Dot click events
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          goToSlide(index);
        });
      });
    }
  });
</script>
