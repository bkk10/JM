<!-- Testimonials Section -->
<section id="testimonials" class="section">
  <h2>What Our Patients Say</h2>
  
  <% if (content && content.testimonials_tagline) { %>
    <p style="text-align: center; color: #666; margin-bottom: 30px; font-size: 14px;">
