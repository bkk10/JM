<div class="admin-card">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h2>üè† Hero Section Management</h2>
    <a href="/admin/section-images" class="btn-admin btn-primary">Manage All Section Images</a>
  </div>
  
  <p>Manage the main banner image that appears at the top of your homepage.</p>
  
  <div style="background: #f6fbf7; border: 1px solid #e5eee7; border-radius: 12px; padding: 20px; margin: 20px 0;">
    <h3 style="margin: 0 0 16px 0; font-size: 16px;">Current Hero Image</h3>
    
    <% 
      // Get hero images from recentImages or need to pass heroImages specifically
      // For now, let's assume we need to add heroImages to the dashboard data
    %>
    
    <% if (heroImages && heroImages.length > 0) { %>
      <div style="display: grid; grid-template-columns: 200px 1fr; gap: 20px; align-items: center;">
        <div>
          <img src="/uploads/<%= heroImages[0].filename %>" alt="<%= heroImages[0].caption || 'Current hero image' %>" 
               style="width: 100%; height: 150px; object-fit: cover; border-radius: 8px;">
        </div>
        <div>
          <p style="margin: 0 0 8px 0;"><strong>Filename:</strong> <%= heroImages[0].filename %></p>
          <p style="margin: 0 0 8px 0;"><strong>Caption:</strong> <%= heroImages[0].caption || 'No caption' %></p>
          <p style="margin: 0 0 12px 0;"><strong>Uploaded:</strong> <%= new Date(heroImages[0].created_at).toLocaleDateString() %></p>
          <div style="display: flex; gap: 8px;">
            <a href="/admin/section-images" class="btn-admin btn-secondary btn-sm">Change Image</a>
            <form method="post" action="/admin/section-images/delete/<%= heroImages[0].id %>" 
                  onsubmit="return confirm('Delete this hero image?');" style="margin: 0;">
              <button type="submit" class="btn-admin btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% } else { %>
      <div style="text-align: center; padding: 20px; color: #4d6b57;">
        <p style="margin: 0 0 16px 0;">No hero image uploaded yet.</p>
        <a href="/admin/section-images" class="btn-admin btn-primary">Upload Hero Image</a>
      </div>
    <% } %>
  </div>
  
  <div style="margin-top: 20px;">
    <h3 style="font-size: 16px; margin-bottom: 12px;">Quick Upload</h3>
    <form method="post" action="/admin/section-images/upload" enctype="multipart/form-data" 
          style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 10px; align-items: end;">
      <input type="hidden" name="section" value="hero">
      <div>
        <label style="display: block; margin-bottom: 6px; font-size: 12px; font-weight: 600;">Image Caption (Optional)</label>
        <input type="text" name="caption" class="inline-edit" placeholder="Describe your hero image...">
      </div>
      <div>
        <label style="display: block; margin-bottom: 6px; font-size: 12px; font-weight: 600;">Choose Image</label>
        <input type="file" name="image" class="inline-edit" accept="image/*" required>
      </div>
      <button type="submit" class="btn-admin btn-primary">Upload</button>
    </form>
  </div>
</div>

<% if (recentImages && recentImages.length > 0) { %>
<div class="admin-card">
  <h2>Recent Gallery Images</h2>
  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 10px; margin: 20px 0;">
    <% recentImages.forEach(image => { %>
      <div style="text-align: center;">
        <img src="/uploads/<%= image.filename %>" alt="<%= image.caption %>" style="width: 100%; height: 100px; object-fit: cover; border-radius: 8px;">
        <p style="font-size: 12px; margin-top: 5px;"><%= image.caption || 'No caption' %></p>
      </div>
    <% }) %>
  </div>
</div>
<% } %>